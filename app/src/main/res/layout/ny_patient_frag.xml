<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    android:padding="8dp"
    tools:context=".views.NyPatient_frag"
    tools:layout_editor_absoluteY="25dp">

    <!-- TODO: Update blank fragment layout -->


    <TextView
        android:id="@+id/nameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="Opret ny patient"
        android:textColor="@color/colorWhite"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/box"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@color/eggwhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/nameTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Navn"
            android:layout_marginRight="140dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/lightBlack"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/nameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="37dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="37dp"
            android:backgroundTint="@color/focused_tint"
            android:ems="10"
            android:hint="eks. Anders And"
            android:inputType="textPersonName"
            android:padding="10dp" />

        <TextView
            android:id="@+id/idTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="120dp"
            android:text="Patient ID"
            android:textColor="@color/lightBlack"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/patientID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="37dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="37dp"
            android:backgroundTint="@color/focused_tint"
            android:ems="10"
            android:gravity="left"
            android:hint="eks. p3"
            android:inputType="textPersonName"
            android:padding="10dp" />

        <TextView
            android:id="@+id/mobilityTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="40dp"
            android:text="@string/mobility"
            android:textColor="@color/lightBlack"
            android:textSize="18sp" />

        <SeekBar
            android:id="@+id/mobilitySeekBar"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="61dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="61dp"
            android:max="4"
            android:progress="2" />

        <TextView
            android:id="@+id/mobilityValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginRight="37dp"
            android:layout_marginLeft="37dp"
            android:layout_marginBottom="8dp"
            android:text="3"
            android:textColor="@color/lightBlack"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/checkBox3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="37dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="37dp"
            android:text="Start mÃ¥ling nu"
            android:textColor="@color/lightBlack"
            android:textStyle="normal" />

        <Button
            android:id="@+id/Opret_P"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="48dp"
            android:layout_marginRight="100dp"
            android:layout_marginBottom="10dp"
            android:background="@color/colorDarkRed"
            android:gravity="center"
            android:padding="8dp"
            android:text="Opret patient"
            android:textColor="@color/warmGrey"
            android:textStyle="bold" />


    </LinearLayout>

</android.support.constraint.ConstraintLayout>