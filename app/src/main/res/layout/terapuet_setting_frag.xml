<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/eggwhite">

    <ImageView
        android:id="@+id/actionbar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/header_bar_red"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="8dp"
        android:text="Indstillinger"
        android:textColor="#ffffff"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/back_patient_data"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageButton
        android:id="@+id/back_patient_data"
        android:layout_width="37dp"
        android:layout_height="44dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="3dp"
        android:background="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/baseline_keyboard_backspace_white_48"
        app:layout_constraintStart_toStartOf="@+id/actionbar"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/editPatient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="56dp"
        android:text="Patient Indstillinger"
        android:textColor="@color/lightBlack"
        android:textSize="23sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/columnT1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/setting_column"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toBottomOf="@+id/editPatient" />

    <ImageView
        android:id="@+id/columnT2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/setting_column"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toBottomOf="@+id/columnT1" />

    <TextView
        android:id="@+id/editInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Rediger oplysninger"
        android:textColor="@color/lightBlack"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/columnT1"
        app:layout_constraintStart_toStartOf="@+id/columnT1"
        app:layout_constraintTop_toTopOf="@+id/columnT1" />

    <TextView
        android:id="@+id/contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Klients kontaktinformation"
        android:textColor="@color/lightBlack"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/columnT2"
        app:layout_constraintStart_toStartOf="@+id/columnT2"
        app:layout_constraintTop_toTopOf="@+id/columnT2" />

    <ImageView
        android:id="@+id/seperator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:src="@drawable/seperator_setting"
        app:layout_constraintTop_toBottomOf="@+id/columnT2"/>


    <TextView
        android:id="@+id/sensorSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Sensor Indstillinger"
        android:textColor="@color/lightBlack"
        android:textSize="23sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seperator" />

    <ImageView
        android:id="@+id/columnT3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/setting_column"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toBottomOf="@+id/sensorSettings" />

    <ImageView
        android:id="@+id/columnT4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/setting_column"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toBottomOf="@+id/columnT3" />

    <TextView
        android:id="@+id/addSensor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="TilfÃ¸j Sensor"
        android:textColor="@color/lightBlack"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/columnT3"
        app:layout_constraintStart_toStartOf="@+id/columnT3"
        app:layout_constraintTop_toTopOf="@+id/columnT3" />

    <TextView
        android:id="@+id/editSensor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Rediger Sensor"
        android:textColor="@color/lightBlack"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/columnT4"
        app:layout_constraintStart_toStartOf="@+id/columnT4"
        app:layout_constraintTop_toTopOf="@+id/columnT4" />

    <Button
        android:id="@+id/logUd"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/button"
        android:text="Log ud"
        android:textColor="#ffffff"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>